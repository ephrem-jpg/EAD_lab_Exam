<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">

    <servlet>
        <servlet-name>BookRegistrationServlet</servlet-name>
        <servlet-class>com.onlinebookstore.controller.BookRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookRegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookDisplayServlet</servlet-name>
        <servlet-class>com.onlinebookstore.controller.BookDisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookDisplayServlet</servlet-name>
        <url-pattern>/display</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookDeletionServlet</servlet-name>
        <servlet-class>com.onlinebookstore.controller.BookDeletionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookDeletionServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookSearchServlet</servlet-name>
        <servlet-class>com.onlinebookstore.controller.BookSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>

</web-app>